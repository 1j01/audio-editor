{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "**/.*",
      "**/.history/**",
      "**/.git/**",
      "**/.idea/**",
      "**/.vscode/**",
      "**/.firebase/**",
      "**/node_modules/**",
      "styles/themes/**/*.css"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
