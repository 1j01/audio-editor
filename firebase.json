{
  "hosting": {
    "public": ".",
    "ignore": [
      "**",
      "!index.html",
      "!manifest.webapp",
      "!service-worker.js",
      "!build/**",
      "!images/**",
      "images/readme-screenshot-*",
      "!lib/**",
      "!styles/**",
      "styles/themes/**/*.css"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
